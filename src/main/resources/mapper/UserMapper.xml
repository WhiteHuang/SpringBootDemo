<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootdemo.mapper.UserMapper">

    <resultMap id="pageUser" type="com.example.springbootdemo.entity.User">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="nickname" property="nickname"/>
        <result column="role" property="role"/>
        <result column="phone" property="phone"/>
        <result column="address" property="address"/>
        <result column="avatar_url" property="avatarUrl"/>
        <collection property="courses" javaType="java.util.List" ofType="com.example.springbootdemo.entity.Course" column="id" select="queryCourse">
            <result column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="score" property="score"/>
            <result column="times" property="times"/>
            <result column="state" property="state"/>
        </collection>
        <collection property="stuCourses" javaType="java.util.List" ofType="com.example.springbootdemo.entity.Course" column="id" select="queryStuCourse">
            <result column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="score" property="score"/>
            <result column="times" property="times"/>
            <result column="state" property="state"/>
        </collection>
    </resultMap>
    <select id="findPage" resultMap="pageUser">

        select sys_user.* from sys_user

        <where>
            <if test="username !=null and username!=''">
                and sys_user.username like concat('%',#{username},'%')
            </if>
            <if test="email !=null and email!=''">
                and sys_user.email like concat('%',#{email},'%')
            </if>
            <if test="address !=null and address!=''">
                and sys_user.address like concat('%',#{address},'%')
            </if>
        </where>
    </select>
    
    <select id="queryCourse" resultType="com.example.springbootdemo.entity.Course">
        select sys_course.id,sys_course.name,sys_course.score,sys_course.times,sys_course.state from sys_course where sys_course.teacher_id = #{id}
    </select>

    <select id="queryStuCourse" resultType="com.example.springbootdemo.entity.Course">
        select sys_course.id,sys_course.name,sys_course.score,sys_course.times,sys_course.state from student_course
                                                                                  left join sys_course
                                                                                  on student_course.course_id=sys_course.id
                                                                                  where student_course.student_id = #{id}
    </select>
</mapper>
